<Window x:Class="WPractice_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPractice_5"
        mc:Ignorable="d"
        Title="Управление компьютером" Height="500" Width="650">
    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <Label FontSize="14">Управленеие компьютером (локальным)</Label>
            <TreeView>
                <TreeViewItem Header="Служебный программы">
                    <TreeViewItem Header="Планировщик заданий">
                        <TreeViewItem Header="Библиотека планировщика заданий"></TreeViewItem>
                    </TreeViewItem>

                    <TreeViewItem Header="Просмотр событий">
                        <TreeViewItem Header="Настраиваемые представления"></TreeViewItem>
                        <TreeViewItem Header="Журналы Windows"></TreeViewItem>
                        <TreeViewItem Header="Журналы приложений и служб"></TreeViewItem>
                        <TreeViewItem Header="Подписки"/>
                    </TreeViewItem>

                    <TreeViewItem Header="Общие папки">
                        <TreeViewItem Header="Общие ресурсы"></TreeViewItem>
                        <TreeViewItem Header="Сеансы"></TreeViewItem>
                        <TreeViewItem Header="Открытые файлы"></TreeViewItem>
                    </TreeViewItem>

                    <TreeViewItem Header="Локальные пользователи и группы">
                        <TreeViewItem Header="Пользователи"></TreeViewItem>
                        <TreeViewItem Header="Группы"></TreeViewItem>
                    </TreeViewItem>

                    <TreeViewItem Header="Производительность">
                        <TreeViewItem Header="Средства наблюдения"></TreeViewItem>
                        <TreeViewItem Header="Группы сборщиков данных"></TreeViewItem>
                        <TreeViewItem Header="Отчеты"></TreeViewItem>
                    </TreeViewItem>
                    <Button Content="Диспетчер задач" Background="White" BorderBrush="White"/>
                </TreeViewItem>

            </TreeView>
            <TreeView>
                <TreeViewItem Header="Запоминающие устройства">
                    <TreeViewItem Header="Управление диском"></TreeViewItem>
                </TreeViewItem>
            </TreeView>
            <TreeViewItem Header="Службы и приложения">
                <TreeViewItem Header="Службы"></TreeViewItem>
                <TreeViewItem Header="Управляющий элемент WMI"></TreeViewItem>
            </TreeViewItem>
        </StackPanel>

        <StackPanel HorizontalAlignment="Left" Margin="325,0,0,0" Width="315"  >
            <Label FontSize="14">Имя</Label>
            <Label FontSize="14">Служебные программы</Label>
            <Label FontSize="14">Запоминающиеся устройства</Label>
            <Label FontSize="14">Службы и приложения</Label>
        </StackPanel>
    </Grid>
</Window>
