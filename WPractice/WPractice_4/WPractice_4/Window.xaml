<Window x:Class="WPractice_4.Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPractice_4"
        mc:Ignorable="d"
        Title="Window" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <GroupBox Header="Draw" Padding="5">
            <StackPanel>
                <RadioButton> Draw one</RadioButton>
                <RadioButton> Draw three</RadioButton>
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Column="1" Header="Scoring" Padding="5">
            <StackPanel>
                <RadioButton> No scoring</RadioButton>
                <RadioButton> Standart scoring</RadioButton>
                <RadioButton> Standart scoring</RadioButton>
                <CheckBox>Cumulative</CheckBox>
            </StackPanel>
        </GroupBox>
        <CheckBox Grid.Row="1" Grid.Column="1">Timed game</CheckBox>
        <StackPanel Grid.Row="1" Grid.RowSpan="2">
            <CheckBox>Display animation</CheckBox>
            <CheckBox>Play sounds</CheckBox>
            <CheckBox>Show tips</CheckBox>
            <CheckBox >Always save game</CheckBox>
            <CheckBox> Always save game on ex</CheckBox>
        </StackPanel>
    </Grid>
</Window>
