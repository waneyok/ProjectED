<Window x:Class="WPractice_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPractice_4"
        mc:Ignorable="d"
        Title="Сведение о расположении" Height="500" Width="400">
    <Grid Background="#cdb4db">
        <StackPanel>
            <!--Верхний текст-->
            <Label Foreground="#03045e">
                <Label.Content>
                    Чтобы создать телефонное или модемное подключение, введите
                </Label.Content>
            </Label>
            <Label Foreground="#03045e">
                <Label.Content>
                    следующие сведения о вашем текущем расположении.
                </Label.Content>
            </Label>
            <!--Первый элемент-->
            <Label Content="Страна, где вы сейчас находитесь:" Margin="0 5 0 0" Foreground="#03045e"/>
            <ComboBox Width="120" HorizontalAlignment="Left" Margin="5 0 0 0 " Foreground="#03045e" Background="#ffafcc">
                <ComboBoxItem Foreground="#03045e" Background="#ffafcc">
                    Россия
                </ComboBoxItem>
                <ComboBoxItem Foreground="#03045e" Background="#ffafcc">
                    Китая
                </ComboBoxItem >
                <ComboBoxItem Foreground="#03045e" Background="#ffafcc">
                    Австралия
                </ComboBoxItem>
                <ComboBoxItem Foreground="#03045e" Background="#ffafcc">
                    Беларусь
                </ComboBoxItem>
            </ComboBox>
            <!--Второй элемент-->
            <Label Content="Телефонный код города:" Margin="0 5 0 0" Foreground="#03045e"/>
            <TextBox Width="90" HorizontalAlignment="Left" Margin="5 0 0 0 " Foreground="#03045e" Background="#ffc8dd" BorderBrush="#ffc8dd" ToolTip="Введите текст/числа"/>
            
            <!--Третий элемент-->
            <Label Content="Код выхода на линию поставщика услуг:" Margin="0 5 0 0" Foreground="#03045e"/>
            <TextBox Width="90" HorizontalAlignment="Left" Margin="5 0 0 0 " Foreground="#03045e" Background="#ffc8dd" BorderBrush="#ffc8dd" ToolTip="Введите текст/числа"/>
            <!--Чатвертый-->
            <Label Content="Код выхода на городскую линию (для офисных АТС):" Margin="0 5 0 0" Foreground="#03045e"/>
            <TextBox Width="90" HorizontalAlignment="Left" Margin="5 0 0 0 " Foreground="#03045e" Background="#ffc8dd" BorderBrush="#ffc8dd" ToolTip="Введите текст/числа"/>
            
            <!--Пяткий-->
            <Label Content="Тип набора номера:" Foreground="#03045e"/>
            <RadioButton Content="тоновый набор" Margin="0 0 0 5" Foreground="#03045e"/>
            <RadioButton Content="импульсный набор" Foreground="#03045e"/>
            
        </StackPanel>
        <Border BorderBrush="#a2d2ff">
            <Button Content="Отмена" Width="70" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                    Margin="5 0 4 5" Foreground="#03045e" Background="#a2d2ff" BorderBrush="#a2d2ff"/>
        </Border>
        <Button Content="ОК" Width="70" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Margin="5 0 90 5" Foreground="#03045e" Background="#a2d2ff" BorderBrush="#a2d2ff"/>
    </Grid>
</Window>
